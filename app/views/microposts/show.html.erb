<div class="col-md-4">
  <%= link_to gravatar_for @micropost.user, size: 50 %>
  <span class="user"><%= link_to @micropost.user.name, @micropost.user %></span>
</div>
<div class="col-md-8">
  <span class="content">
    <p><%= @micropost.content %>
    <%= image_tag @micropost.picture.url if @micropost.picture? %></p>
  </span>
  <br>
  <span class="timestamp">
    <%= t ".posted" %>
    <%= time_ago_in_words(@micropost.created_at) %> <%= t ".ago"%>
    <% if current_user?(@micropost.user) %>
      <%= link_to t(".del"), @micropost,
        method: :delete, data: {confirm: t(".confirm")} %>
    <% end %>
  </span>
  <% if logged_in? %>
    <% if current_user?(@user) || current_user.following?(@micropost.user) %>
      <%= render "microposts/form" %>
    <% end %>
  <% end %>
  <div>
    <ul id="comment">
      <%= render @comment %>
    </ul>
  </div>
</div>
