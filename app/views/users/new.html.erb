<% provide :title, t("signup_title") %>
<h1><%= t "signup_title"%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
    <%= render "shared/error_messages" %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, t(".pwd_confirm") %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit t(".form_sub"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
